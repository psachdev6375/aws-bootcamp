{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "AllowEC2OnlyInMumbai",
            "Effect": "Allow",
            "Action": "ec2:*",
            "Resource": "*",
            "Condition": {
                "StringEquals": {
                    "ec2:Region": "ap-south-1"
                }
            }
        },
        {
            "Sid": "AllowTypicalUsageServices",
            "Effect": "Allow",
            "Action": [
                "iam:CreateInstanceProfile",
                "rds:*",
                "iam:ListServerCertificates",
                "iam:ListPoliciesGrantingServiceAccess",
                "iam:ListMFADevices",
                "iam:ListSigningCertificates",
                "iam:ListVirtualMFADevices",
                "iam:AddRoleToInstanceProfile",
                "iam:ListInstanceProfilesForRole",
                "iam:PassRole",
                "iam:ListSSHPublicKeys",
                "iam:ListAttachedRolePolicies",
                "iam:ListAttachedUserPolicies",
                "iam:ListAttachedGroupPolicies",
                "iam:ListRolePolicies",
                "iam:ChangePassword",
                "iam:ListAccessKeys",
                "iam:ListPolicies",
                "iam:DeleteInstanceProfile",
                "sns:*",
                "iam:GetInstanceProfile",
                "iam:ListSAMLProviders",
                "s3:*",
                "iam:ListGroupPolicies",
                "iam:ListEntitiesForPolicy",
                "iam:ListRoles",
                "cloudformation:*",
                "elasticloadbalancing:*",
                "iam:ListUserPolicies",
                "iam:ListInstanceProfiles",
                "cloudwatch:GetMetricStatistics",
                "iam:ListPolicyVersions",
                "iam:ListOpenIDConnectProviders",
                "iam:ListGroupsForUser",
                "cloudwatch:DescribeAlarms",
                "iam:ListAccountAliases",
                "iam:ListUsers",
                "iam:ListGroups",
                "iam:GetAccountSummary"
            ],
            "Resource": "*"
        },
        {
            "Sid": "DenyAllExceptt2Micro",
            "Effect": "Deny",
            "Action": "ec2:RunInstances",
            "Resource": [
                "arn:aws:ec2:*:*:subnet/*",
                "arn:aws:ec2:*:*:key-pair/*",
                "arn:aws:ec2:ap-south-1:<ACCOUNT-ID>:instance/*",
                "arn:aws:ec2:*::snapshot/*",
                "arn:aws:ec2:*:*:volume/*",
                "arn:aws:ec2:*:*:security-group/*",
                "arn:aws:ec2:*:*:placement-group/*",
                "arn:aws:ec2:*:*:network-interface/*",
                "arn:aws:ec2:*::image/*"
            ],
            "Condition": {
                "StringEquals": {
                    "ec2:InstanceType": [
                        "m2.xlarge",
                        "cg1.4xlarge",
                        "c3.4xlarge",
                        "c4.4xlarge",
                        "d2.xlarge",
                        "i2.xlarge",
                        "m3.2xlarge",
                        "r3.xlarge",
                        "m4.2xlarge",
                        "m2.2xlarge",
                        "c3.8xlarge",
                        "c4.8xlarge",
                        "cc2.8xlarge",
                        "g2.8xlarge",
                        "hi1.4xlarge",
                        "d2.2xlarge",
                        "i2.2xlarge",
                        "r3.2xlarge",
                        "m4.4xlarge",
                        "m2.4xlarge",
                        "hs1.8xlarge",
                        "d2.4xlarge",
                        "i2.4xlarge",
                        "r3.4xlarge",
                        "m4.10xlarge",
                        "cr1.8xlarge",
                        "d2.8xlarge",
                        "i2.8xlarge",
                        "r3.8xlarge",
                        "t2.small",
                        "t2.medium",
                        "t2.large",
                        "t2.xlarge",
                        "t2.2xlarge",
                        "t2.nano"
                    ]
                }
            }
        },
        {
            "Sid": "DenyAllExceptt2MicroWithTags",
            "Effect": "Deny",
            "Action": [
                "ec2:RunInstances",
                "ec2:CreateVolume"
            ],
            "Resource": [
                "arn:aws:ec2:*:*:subnet/*",
                "arn:aws:ec2:*:*:key-pair/*",
                "arn:aws:ec2:ap-south-1:<ACCOUNT-ID>:instance/*",
                "arn:aws:ec2:*::snapshot/*",
                "arn:aws:ec2:*:*:security-group/*",
                "arn:aws:ec2:ap-south-1:<ACCOUNT-ID>:volume/*",
                "arn:aws:ec2:*:*:placement-group/*",
                "arn:aws:ec2:*:*:network-interface/*",
                "arn:aws:ec2:*::image/*"
            ],
            "Condition": {
                "StringNotEquals": {
                    "aws:RequestTag/purpose": "awslearn"
                }
            }
        },
        {
            "Sid": "DenyAllExceptt2MicroAndSingleAZ",
            "Effect": "Deny",
            "Action": "rds:CreateDBInstance",
            "Resource": "*",
            "Condition": {
                "NumericNotEquals": {
                    "rds:Piops": "1"
                },
                "Bool": {
                    "rds:MultiAz": "true"
                },
                "StringNotEquals": {
                    "rds:DatabaseClass": "db.t2.micro",
                    "rds:DatabaseEngine": "mysql"
                }
            }
        }
    ]
}